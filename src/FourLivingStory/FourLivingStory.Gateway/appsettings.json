{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "apiservice",
        "Match": { "Path": "/api/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "web-route": {
        "ClusterId": "webfrontend",
        "Match": { "Path": "{**catch-all}" }
      }
    },
    "Clusters": {
      "apiservice": {
        "Destinations": {
          "default": { "Address": "https+http://apiservice" }
        }
      },
      "webfrontend": {
        "Destinations": {
          "default": { "Address": "https+http://webfrontend" }
        }
      }
    }
  }
}
